process.stdin.resume()
process.stdin.setEncoding('utf8')

console.log('How old are you ? ')
process.stdin.on('data', (number) => {
        let currentYear = 2020;
 
        if (number > 99){
          console.log(`You should be under 99 years old`)
         } else if (number < 0) {  
          console.log ('Please enter an age between 0 and 99')
         } else if (!isNaN(number)) {  
          console.log ('Please enter an age between 0 and 99. Only numbers are accepted')
        } else {
          const birthYear = currentYear - number;
          console.log(`You are born in ${birthYear}.`)
        }
     
  process.exit()
})
