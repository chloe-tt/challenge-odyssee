
//Simplement afficher la chaîne “Hello World!”

function helloWorld(){
  console.log("Hello World")
}

helloWorld()




//Renvoyer à l’identique le paramètre passé en entrée

function thankYou(name) {
  console.log(name)
}

thankYou("chloe")


//Renvoyer le double de la valeur entière passée en entrée

function prix(p1) {
  console.log(p1*2)
}

prix(40)

//Renvoyer  la multiplication de deux valeurs entières passées en entrée

function surface (p2, p3) {
  console.log(p2*p3)
}

surface(2, 3)



//Renvoyer, à partir d’une chaîne de caractères passée en entrée, la même chaîne entourée du caractère *  (‘John’ => ‘*John*’)

function firstN (firstN ="cam") {
  console.log(`'*${firstN}*' `)
}

firstN("John")

